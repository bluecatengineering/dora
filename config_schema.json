{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "dora schema",
    "description": "dora JSON schema",
    "definitions": {
        "lease_time": {
            "type": "object",
            "required": ["default"],
            "properties": {
                "default": {
                    "type": "integer"
                },
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                }
            }
        },
        "config": {
            "type": "object",
            "required": ["lease_time"],
            "properties": {
                "lease_time": {
                    "$ref": "#/definitions/lease_time"
                }
            }
        },
        "option": {
            "type": "object",
            "required": ["type", "value"],
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "ip"
                        },
                        "value": {
                            "type": "string",
                            "format": "ipv4"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "ip_list"
                        },
                        "value": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "format": "ipv4"
                            }
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "u32"
                        },
                        "value": {
                            "type": "number"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "u16"
                        },
                        "value": {
                            "type": "number"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "hex"
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "str"
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "b64"
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "options": {
            "type": "object",
            "properties": {
                "values": {
                    "type": "object",
                    "patternProperties": {
                        "\"[0-255]\"": {
                            "$ref": "#/definitions/option"
                        }
                    }
                }
            }
        },
        "except": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "ipv4"
            }
        },
        "range": {
            "type": "object",
            "required": ["config", "start", "end", "options"],
            "properties": {
                "config": {
                    "$ref": "#/definitions/config"
                },
                "start": {
                    "type": "string",
                    "format": "ipv4"
                },
                "end": {
                    "type": "string",
                    "format": "ipv4"
                },
                "options": {
                    "$ref": "#/definitions/options"
                },
                "except": {
                    "$ref": "#/definitions/except"
                }
            }
        },
        "match": {
            "type": "object",
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "chaddr": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "options": {
                            "$ref": "#/definitions/options"
                        }
                    }
                }
            ]
        },
        "reservation": {
            "type": "object",
            "additionalProperties": false,
            "required": ["config", "ip", "match", "options"],
            "properties": {
                "config": {
                    "$ref": "#/definitions/config"
                },
                "ip": {
                    "type": "string",
                    "format": "ipv4"
                },
                "options": {
                    "$ref": "#/definitions/options"
                },
                "match": {
                    "$ref": "#/definitions/match"
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "chaddr_only": {
            "type": "boolean"
        },
        "interfaces": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "backend_mode": {
            "description": "Lease backend mode: standalone (default, SQLite) or nats (NATS)",
            "type": "string",
            "enum": ["standalone", "nats"],
            "default": "standalone"
        },
        "nats": {
            "description": "NATS coordination configuration for nats mode",
            "type": "object",
            "properties": {
                "servers": {
                    "description": "NATS server URL(s). At least one required for nats mode.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "subject_prefix": {
                    "description": "Subject prefix for all NATS coordination channels",
                    "type": "string",
                    "default": "dora.cluster"
                },
                "subjects": {
                    "description": "Override individual NATS subject names",
                    "type": "object",
                    "properties": {
                        "lease_upsert": { "type": "string" },
                        "lease_release": { "type": "string" },
                        "lease_snapshot_request": { "type": "string" },
                        "lease_snapshot_response": { "type": "string" }
                    }
                },
                "leases_bucket": {
                    "description": "JetStream KV bucket name for lease records/indexes",
                    "type": "string",
                    "default": "dora_leases"
                },
                "host_options_bucket": {
                    "description": "JetStream KV bucket name for host-option records",
                    "type": "string",
                    "default": "dora_host_options"
                },
                "lease_gc_interval_ms": {
                    "description": "NATS lease garbage-collection sweep interval in milliseconds",
                    "type": "integer",
                    "default": 60000,
                    "minimum": 1
                },
                "contract_version": {
                    "description": "Contract version for the clustering protocol",
                    "type": "string",
                    "default": "1.0.0"
                },
                "security_mode": {
                    "description": "NATS security mode",
                    "type": "string",
                    "enum": ["none", "user_password", "token", "nkey", "tls", "creds_file"],
                    "default": "none"
                },
                "username": { "type": "string" },
                "password": { "type": "string" },
                "token": { "type": "string" },
                "nkey_seed_path": { "type": "string" },
                "tls_cert_path": { "type": "string" },
                "tls_key_path": { "type": "string" },
                "tls_ca_path": { "type": "string" },
                "creds_file_path": { "type": "string" },
                "connect_timeout_ms": { "type": "integer" },
                "request_timeout_ms": { "type": "integer" }
            },
            "required": ["servers"]
        },
        "networks": {
            "description": "top level bucket for network configurations",
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "ping_check": {
                        "type": "boolean"
                    },
                    "ping_timeout_ms": {
                        "type": "integer"
                    },
                    "authoritative": {
                        "type": "boolean"
                    },
                    "probation_period": {
                        "type": "integer"
                    },
                    "ranges": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/range"
                        }
                    },
                    "reservations": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/reservation"
                        }
                    }
                }
            }
        }
    }
}
